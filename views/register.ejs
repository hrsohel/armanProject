<%- include("header") %>
<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img src="images/logpic.jpg" alt="" width="60%">
            </div>
            <div class="col-2">
                    <div class="from-container">
                        <h2>Register</h2>
                        <form action="register" method="post">
                            <input type="text" name="name" class="input-box" placeholder="Enter Your Name" required>
                            <input type="email" name="email" class="input-box" placeholder="Enter your email here" required>
                            <input type="password" name="password" class="input-box" placeholder="Password" required>
                            <button type="submit" class="submit-btn">Submit</button>
                            <input type="checkbox"><span>Remember Me</span>
                        </form>
                        <a href="login"><button type="button" class="btn">I've an account</button></a>
                        <a href="" class="btn2">Forgot password </a>

                      
                    </div>
            </div>
        </div>
    </div>
</div>
