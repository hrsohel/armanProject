<%- include("header") %>


<div class="account-page">
    <% if(sessionData !== "") {%>
    <h3 style="color: green;"><%= sessionData %></h3>
    <% } else {%><p style="color: green;"></p> <% } %>
    <% if(_noUser) {%>
    <h3 style="color: red;"><%= _noUser %></h3>
    <% } else {%><p style="color: green;"></p> <% } %>
    <% if(wrongPassword) {%>
    <h3 style="color: red;"><%= wrongPassword %></h3>
    <% } else {%><p style="color: green;"></p> <% } %>
    <div class="container">
        <div class="row">
            <div class="col-2">
                <img src="images/logpic.jpg" alt="" width="60%">
            </div>
            <div class="col-2">
                    <div class="from-container">
                        <h2>Login</h2>
                        <form action="login" method="post">
                            <input type="email" name="email" class="input-box" placeholder="Enter your email here" required>
                            <input type="password" name="password" class="input-box" placeholder="Password" required>
                            <button type="submit" class="submit-btn">Submit</button>
                            <input type="checkbox"><span>Remember Me</span>
                        </form>
                        <a href="register"><button type="button" class="btn">I'm new here</button></a>
                        <a href="" class="btn2">Forgot password </a>

                      
                    </div>
            </div>
        </div>
    </div>
</div>
<%- include("footer") %>